using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace arrays4
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("de que valor quieres saber la pos ? : ");
            int valor = int.Parse(Console.ReadLine());
            int[] array = {5,8,10,12,5};
            for(int i = 0; i <= array.Length - 1; i++)
            {
                if (array[i] == valor)
                {
                    Console.WriteLine($"este valor esta en la pos = {i}");
                }
            }
            Console.ReadKey();

        }
    }
}
