using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading;

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {
            int[] empleados = new int[10];
            int count = 0;
            double bandera = 0,sum = 0;

            for (int i = 0; i < empleados.Length; i++)
            {
                empleados[i] = get_info();

                Console.WriteLine("Dato aÃ±adido correctamente en el array!!");
                Thread.Sleep(500);              
                Console.Clear();
            }
            foreach (int dato in empleados)
            {
                Console.WriteLine($"Dato encontrado = {dato}  En la pos = {count}");
                count += 1;
            } 
            foreach (int date in empleados)
            {
                
                sum = bandera + date;
                bandera = sum;             
            }
            double media = sum / empleados.Length;


            Console.WriteLine($"la media del array es {media}");
            Console.WriteLine(empleados.Length);
            Console.ReadKey();


        }
        static int get_info()
        {
            Console.WriteLine("introduce un numero : ");
            int numero = int.Parse(Console.ReadLine());
            return numero;
        }
    }
}
